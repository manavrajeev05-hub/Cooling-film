    <!-- App theme -->
    <style name="Theme.CoolingFilmMonitor" parent="Base.Theme.CoolingFilmMonitor" />
    <style name="Theme.YourApp" parent="Theme.Material3.DayNight.NoActionBar"/>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_luxury">

    <!-- ===================== -->
    <!-- TOP TOOLBAR -->
    <!-- ===================== -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:paddingEnd="8dp"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/top_menu">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="start"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/app_logo"
            app:shapeAppearanceOverlay="@style/RoundedImage"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Watermark -->
    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:src="@drawable/app_logo"
        android:alpha="0.05"
        android:scaleType="centerInside"/>

    <!-- ===================== -->
    <!-- MAIN CONTENT -->
    <!-- ===================== -->
    <ScrollView
        android:layout_below="@id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- HERO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/heroCard"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="@color/card_dark"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/tempGauge"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_centerInParent="true"
                        android:max="40"
                        app:indicatorSize="140dp"
                        app:trackThickness="10dp"/>

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="20Â°C"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvCoolingStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tempGauge"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="@string/cooling_stable"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tvConnectionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disconnected"
                        android:textColor="@android:color/white"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/connect"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/primary_blue"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/gridTile2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardCornerRadius="22dp"
                app:cardBackgroundColor="@color/primary_blue">

                <TextView
                    android:id="@+id/gridText2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/log_data"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
